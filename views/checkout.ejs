<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Supermarket App</title>
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">
            <img src="/logo.png" alt="Flower Shop Logo" style="height: 70px;">
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="container mt-5">
            <!-- Search bar -->
            <input type="text" id="searchInput" class="form-control mb-3" placeholder="Search flowers...">
            
            <div class="row" id="flowerCards">
                <!-- Existing card elements -->
                <!-- ... -->
            </div>
        </div>
        
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="/">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/cart">Cart</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/tracking">Tracking</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/addflower">Add Flower</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/subscription">Subscription</a>
              </li>
            </ul>
        </div>
    </nav>
    <table class="table table-hover small text-center">
        <thead>
            <tr>
              <th width="100">Order Date</th>
              <th width="100">Address</th>
              <th width="50">Postal Code</th>
              <th width="50">Total payable</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <% if (checkout) { %>
                <td width="100"><%= checkout.orderdate %></td>
                <td width="100"><%= checkout.address %></td>
                <td width="50"><%= checkout.postalcode %></td>
                <td width="50"><%= checkout.totalamount %></td>
                <% } %>
            </tr>
        </tbody>
      </table>
      <form action="/payment" method="POST">
        <input type="hidden" name="price" value="<%= checkout.totalamount %>">
        <input type="hidden" name="address" value="<%= checkout.address %>">
        <input type="hidden" name="postal" value="<%= checkout.postalcode %>">
        <input type="hidden" name="date" value="<%= checkout.orderdate %>">

        <button type="submit">Proceed Payment</button>
    </form>

</body>

</html>